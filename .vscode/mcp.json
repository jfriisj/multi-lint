{
  "servers": {
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "multi-lint-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "mcp-docker-lint",
        "-v",
        "${workspaceFolder}:/workspace",
        "ghcr.io/jfriisj/multi-lint-docker:latest"
      ]
    },
    "multi-lint-infrastructure": {
      "command": "docker", 
      "args": [
        "run",
        "--rm", 
        "-i",
        "--name",
        "mcp-infrastructure-lint",
        "-v",
        "${workspaceFolder}:/workspace",
        "ghcr.io/jfriisj/multi-lint-infrastructure:latest"
      ]
    },
    "multi-lint-javascript": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "mcp-javascript-lint",
        "-v",
        "${workspaceFolder}:/workspace",
        "ghcr.io/jfriisj/multi-lint-javascript:latest"
      ]
    },
    "multi-lint-python": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "mcp-python-lint",
        "-v", 
        "${workspaceFolder}:/workspace",
        "ghcr.io/jfriisj/multi-lint-python:latest"
      ]
    },
    "multi-lint-security": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "mcp-security-scan",
        "-v",
        "${workspaceFolder}:/workspace", 
        "ghcr.io/jfriisj/multi-lint-security:latest"
      ]
    },
    "multi-lint-unity": {
      "command": "docker", 
      "args": [
        "run",
        "--rm",
        "-i",
        "--name",
        "mcp-unity-lint",
        "-v",
        "${workspaceFolder}:/workspace",
        "ghcr.io/jfriisj/multi-lint-unity:latest"
      ]
    }
  }
}