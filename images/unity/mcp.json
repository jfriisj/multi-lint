{
  "mcpVersion": "2024-11-05",
  "name": "multi-lint-unity",
  "version": "1.0.0",
  "description": "Unity C# development and code quality tools",
  "author": "jfriisj",
  "license": "MIT",
  "homepage": "https://github.com/jfriisj/multi-lint",
  "repository": {
    "type": "git",
    "url": "https://github.com/jfriisj/multi-lint.git"
  },
  "server": {
    "command": "python3",
    "args": ["/app/mcp-tool-server.py", "--stdin"],
    "env": {
      "MCP_SERVER_PORT": "3000"
    }
  },
  "tools": {
    "csharp": {
      "dotnet-format": {
        "description": "C# code formatter",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to C# project or solution"},
            "fix": {"type": "boolean", "description": "Format code", "default": false},
            "config": {"type": "string", "description": "Verbosity level"}
          },
          "required": ["path"]
        }
      },
      "roslynator": {
        "description": "Advanced C# code analysis and refactoring",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to C# project or solution"},
            "fix": {"type": "boolean", "description": "Apply fixes", "default": false},
            "config": {"type": "string", "description": "Configuration file path"}
          },
          "required": ["path"]
        }
      },
      "security-scan": {
        "description": "C# security vulnerability scanner",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to C# project or solution"}
          },
          "required": ["path"]
        }
      }
    },
    "unity": {
      "unity-analyzers": {
        "description": "Unity-specific code analyzers",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to Unity project"},
            "config": {"type": "string", "description": "Build configuration (Debug/Release)"}
          },
          "required": ["path"]
        }
      },
      "stylecop": {
        "description": "StyleCop C# style and consistency analyzer",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to Unity project"},
            "config": {"type": "string", "description": "Build configuration"}
          },
          "required": ["path"]
        }
      },
      "editorconfig": {
        "description": "EditorConfig compliance checker",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to project directory"}
          },
          "required": ["path"]
        }
      },
      "unity-test": {
        "description": "Unity unit test runner",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to Unity project"},
            "config": {"type": "string", "description": "Test configuration"}
          },
          "required": ["path"]
        }
      }
    },
    "project": {
      "dotnet-outdated": {
        "description": "Check for outdated NuGet packages",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to project or solution"}
          },
          "required": ["path"]
        }
      },
      "package-audit": {
        "description": "Audit NuGet packages for vulnerabilities",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to project or solution"}
          },
          "required": ["path"]
        }
      }
    }
  },
  "workflows": {
    "unity_workflow": {
      "description": "Complete Unity development workflow",
      "steps": ["restore", "clean", "unity-build", "dotnet-format", "editorconfig", "unity-test", "package-audit"]
    },
    "csharp_quality_check": {
      "description": "C# code quality analysis",
      "steps": ["dotnet-format", "roslynator", "security-scan"]
    },
    "unity_security_audit": {
      "description": "Unity project security audit",
      "steps": ["security-scan", "package-audit"]
    }
  }
}