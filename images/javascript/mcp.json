{
  "mcpVersion": "2024-11-05",
  "name": "multi-lint-javascript",
  "version": "1.0.0",
  "description": "JavaScript/TypeScript linting and testing tools for web development",
  "author": "jfriisj",
  "license": "MIT",
  "homepage": "https://github.com/jfriisj/multi-lint",
  "repository": {
    "type": "git",
    "url": "https://github.com/jfriisj/multi-lint.git"
  },
  "server": {
    "command": "python3",
    "args": ["/app/mcp-tool-server.py", "--stdin"],
    "env": {
      "MCP_SERVER_PORT": "3000"
    }
  },
  "tools": {
    "javascript": {
      "eslint": {
        "description": "JavaScript/TypeScript linter",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to JS/TS files or directory"},
            "fix": {"type": "boolean", "description": "Auto-fix issues", "default": false},
            "config": {"type": "string", "description": "Path to ESLint config file"}
          },
          "required": ["path"]
        }
      },
      "prettier": {
        "description": "Code formatter for JavaScript/TypeScript",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to files or directory"},
            "fix": {"type": "boolean", "description": "Format code", "default": false}
          },
          "required": ["path"]
        }
      },
      "typescript": {
        "description": "TypeScript compiler and type checker",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to TypeScript project directory"},
            "config": {"type": "string", "description": "Path to tsconfig.json"}
          },
          "required": ["path"]
        }
      },
      "jest": {
        "description": "JavaScript testing framework",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to test directory"},
            "config": {"type": "string", "description": "Jest configuration options"}
          },
          "required": ["path"]
        }
      }
    },
    "web": {
      "stylelint": {
        "description": "CSS/SCSS/Sass linter",
        "inputSchema": {
          "type": "object",
          "properties": {
            "path": {"type": "string", "description": "Path to CSS files or directory"},
            "fix": {"type": "boolean", "description": "Auto-fix issues", "default": false}
          },
          "required": ["path"]
        }
      }
    }
  },
  "workflows": {
    "web_full_check": {
      "description": "Run complete web development quality suite",
      "steps": ["eslint", "prettier", "typescript", "stylelint", "jest"]
    },
    "react_check": {
      "description": "React-specific linting and testing",
      "steps": ["eslint", "typescript", "jest"]
    }
  }
}